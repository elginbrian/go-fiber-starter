# Default Port
PORT=3000

# Public URL for the database 
DATABASE_PUBLIC_URL=postgres://user:password@localhost:5432/mydb?sslmode=require

# URL for internal use (connection string)
DATABASE_URL=postgres://user:password@localhost:5432/mydb

# Path to PostgreSQL data directory
PGDATA=/var/lib/postgresql/data

# Database name
PGDATABASE=mydb

# Host of the PostgreSQL database
PGHOST=localhost

# Password for PostgreSQL user
PGPASSWORD=password

# Port for PostgreSQL (default: 5432)
PGPORT=5432

# PostgreSQL username
PGUSER=user

# Same as PGDATABASE, for the internal PostgreSQL configuration
POSTGRES_DB=mydb

# Password for PostgreSQL user
POSTGRES_PASSWORD=password

# Username for PostgreSQL user
POSTGRES_USER=user

# Number of days for SSL certificate validity (if applicable)
SSL_CERT_DAYS=365

# Enable migrations
MIGRATIONS_ENABLED=true
